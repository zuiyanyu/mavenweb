<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!--name：JNDI的名称，下面Spring加载JNDI时会引用。-->
    <Resource name="jdbc/demoDB" auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/mavenweb"
              username="root"
              password="123456"
              maxActive="50"
              maxIdle="30"
              maxWait="10000" />
    <Resource name="jdbc/demoDB2" auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/mavenweb"
              username="root"
              password="123456"
              maxActive="50"
              maxIdle="30"
              maxWait="10000" />
</Context>